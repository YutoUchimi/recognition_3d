<launch>

  <param name="/use_sim_time" value="true" />

  <node name="rosbag_play"
        pkg="rosbag" type="play"
        args="$(optenv HOME)/.ros/rosbag/pick_010.bag --clock --loop" />

  <!-- camera -->
  <group ns="/right_hand_camera/left/rgb">
    <node name="republish_rgb"
          pkg="image_transport" type="republish"
          args="compressed raw">
      <remap from="in" to="image_raw" />
      <remap from="out" to="image_raw" />
    </node>
  </group>

  <group ns="/right_hand_camera/left/depth">
    <node name="republish_depth"
          pkg="image_transport" type="republish"
          args="compressedDepth raw">
      <remap from="in" to="image_raw" />
      <remap from="out" to="image_raw" />
    </node>
  </group>

  <include file="$(find jsk_arc2017_baxter)/launch/setup/setup_for_pick.launch">
    <arg name="load_driver" value="false" />
  </include>

</launch>
